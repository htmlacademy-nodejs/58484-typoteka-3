extends layouts/basic

include parts/_comment

block content
  header.header
    a.header__logo.logo(href='#')
      img.logo__image(src='/img/icons/logo-image-only.svg' alt='логотип Тайпотеки')
      span.logo__name Типотека
    nav.header__nav
      ul.header__nav-list
        li.header__list-item
          p Алёна Фролова
        li.header__list-item
          a.header__exit(href='#') Выйти
    a.header__avatar.avatar
      img(src='/img/avatar-2.png' alt='аватар пользователя')
    a.header__search.button.button--search(href='#' aria-label='поиск по сайту')
  main
    section.post
      h1.visually-hidden Пост
      section.post__content
        h2.visually-hidden Основное содержание
        .post__wrapper
          .post__head
            a.post__backwards.button.button--backwards(href='#', onclick='history.go(-1)') Назад
            time.post__date(datetime='2019-03-21T20:33') 21.03.2019, 20:33
            h2.post__title.title.title--main #{article.title}
            ul.post__themes.themes
              each category in article.categories
                li.themes__item
                  a.themes__item-link(href='#')
                    | #{category.title}
                    sup #{category.count}
                  button.themes__remove-btn(type='button') Удалить категорию
          if article.image
            .post__picture
              img(src=`/img/${article.image}` alt=article.title)
          .post__text
            h3 #{article.title}
            p.
              #{article.announce}

            p #{article.fullText}
      // Comments Block
      .post__wrapper.post__wrapper--comments
        section.post__comments.comments
          h2.comments__title.title.title--middle Комментарии
          ul.comments__list
            each comment in article.comments
              +comment(comment)
          .comments__footer.comments__footer--user
            form(action=`/articles/${article.id}/comments` method='POST')
              .comments__avatar.avatar
                img(src='/img/avatar-1.png' alt='аватар пользователя')
              label
                textarea(rows='1' placeholder='Присоединиться к обсуждению' name='text')
              button.comments__button.button.button--colored(type='submit') Опубликовать
  footer.footer
    a.footer__copyright(href='#' aria-label='HTMLAcademy')
      img(src='/img/icons/HTMLAcademyLogo.svg' width='112' height='50' alt='HTMLAcademy')
    span •
    p Типотека, 2019

